{
  "name": "obsidian-opencode",
  "version": "0.1.0",
  "description": "Embed OpenCode AI assistant in Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && bun run esbuild.config.mjs production",
    "build:openwork": "node scripts/build-openwork.mjs && node scripts/copy-openwork-dist.mjs",
    "build:all": "bun run build:openwork && bun run build",
    "test": "bun test tests/"
  },
  "keywords": [
    "obsidian",
    "opencode",
    "ai",
    "assistant"
  ],
  "author": "mat",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^20.11.0",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.21.5",
    "obsidian": "latest",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "zod": "^4.3.5"
  }
}
